<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Data reserva</th>
      <th>Data solicitacao</th>
      <th>Area comum</th>
      <th>Usuario reserva</th>
      <th>Usuario liberador</th>
      <th>Situacao reserva</th>
      <th>Observacao</th>
      <th>Periodo reserva</th>
      <th>Obervacao liberador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.codigo %></td>
        <td><%= reserva.data_reserva %></td>
        <td><%= reserva.data_solicitacao %></td>
        <td><%= reserva.area_comum_id %></td>
        <td><%= reserva.usuario_reserva_id %></td>
        <td><%= reserva.usuario_liberador_id %></td>
        <td><%= reserva.situacao_reserva_id %></td>
        <td><%= reserva.observacao %></td>
        <td><%= reserva.periodo_reserva_id %></td>
        <td><%= reserva.obervacao_liberador %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

