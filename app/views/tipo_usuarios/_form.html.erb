<p id="notice"><%= notice %></p>

<%= form_for(tipo_usuario) do |f| %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="page-header"><%= action[:title] %> Tipo de Usuário</h2>
  </div><!-- fim .panel-heading -->
  <div class="panel-body">
      <% if tipo_usuario.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(tipo_usuario.errors.count, "erro") %> impediu(rão) o Tipo Usuário de ser salvo:</h2>

          <ul>
          <% tipo_usuario.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
         <div class="col-md-4">
          <%= f.label :codigo %>
        </div>
        <div class="col-md-4">
          <%= f.label :descricao %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <%= f.text_field :codigo, {value: @proximo_codigo, readonly: true, class:"form-control"} %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :descricao, {required: false, class:"form-control"}  %>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-default"><%= action[:button] %></button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


<% unless @tipo_usuarios.blank? %>

  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Código</th>
        <th>Descrição</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @tipo_usuarios.each do |tipo_usuario| %>
        <tr>
          <td><%= tipo_usuario.codigo %></td>
          <td><%= tipo_usuario.descricao %></td>
          <td>
            <div class="dropdown">
             <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Ações
             <span class="caret"></span></button>
             <ul class="dropdown-menu">
               <li>  <%= link_to 'Editar', edit_tipo_usuario_path(tipo_usuario) %></li>
               <li><%= link_to 'Deletar', tipo_usuario, method: :delete, data: { confirm: "Deseja deletar #{tipo_usuario.descricao} ?" } %></li>
             </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
    <thead>
      <tr>
        <td colspan="3"><%= will_paginate @tipo_usuarios %></td>
      </tr>
    </thead>
  </table>

<% end %>
