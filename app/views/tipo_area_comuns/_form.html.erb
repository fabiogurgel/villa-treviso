<p id="notice"><%= notice %></p>

<%= form_for(tipo_area_comum) do |f| %>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h2 class="page-header"><%= action[:title] %> Tipo Area Comum</h2>
    </div><!-- fim .panel-heading -->
    <div class="panel-body">

      <% if tipo_area_comum.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(tipo_area_comum.errors.count, "erros") %> prohibited this tipo_area_comum from being saved:</h2>

          <ul>
          <% tipo_area_comum.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
         <div class="col-md-4">
          <%= f.label :codigo %>
        </div>
        <div class="col-md-4">
          <%= f.label :descricao %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <%= f.text_field :codigo, {value: @proximo_codigo, readonly: true, class:"form-control"} %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :descricao, class:"form-control"  %>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-default"><%= action[:button] %></button>
          </div>
        </div>
      </div>
    <% end %>

    <% unless @tipo_area_comuns.blank? %>

    <table class='table table-striped'>
      <thead>
        <tr>
          <th>Código</th>
          <th>Descrição</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @tipo_area_comuns.each do |tipo_area_comum| %>
          <tr>
            <td><%= tipo_area_comum.codigo %></td>
            <td><%= tipo_area_comum.descricao %></td>
            <td>
              <div class="dropdown">
               <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Ações
               <span class="caret"></span></button>
               <ul class="dropdown-menu">
                 <li>  <%= link_to 'Editar', edit_tipo_area_comum_path(tipo_area_comum) %></li>
                 <li><%= link_to 'Deletar', tipo_area_comum, method: :delete, data: { confirm: "Deseja deletar #{tipo_area_comum.descricao} ?" } %></li>
               </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
      <thead>
        <tr>
          <td colspan="3"><%= will_paginate @tipo_area_comuns %></td>
        </tr>
      </thead>
    </table>
    </div>
  </div>
</div>
</div>
</div>

<% end %>
